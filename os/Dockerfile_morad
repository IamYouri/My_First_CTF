FROM ubuntu:20.04
# mdp:password
# ssh user@192.168.226.144 -p <port generé>

# Installer SSH et autres dépendances
RUN apt-get update && apt-get install -y openssh-server sudo

RUN curl -fsSL https://deb.nodesource.com/setup_14.x | bash -
RUN apt-get install -y nodejs
RUN mkdir /var/run/sshd

# Créer un utilisateur pour SSH
RUN useradd -ms /bin/bash user
RUN echo 'user:password' | chpasswd
RUN echo 'user ALL=(ALL) NOPASSWD:ALL' >> /etc/sudoers

# Autoriser les connexions root via SSH (facultatif et non recommandé en production)
RUN echo 'PermitRootLogin yes' >> /etc/ssh/sshd_config


COPY serveur.js /home/user/serveur.js 


# Exposer le port SSH
EXPOSE 22
EXPOSE 5000

# Copier les fichiers de l'application
#WORKDIR /usr/src/app
#COPY package*.json ./
#COPY serveur.js ./
#COPY . .

# Installer les dépendances
#RUN npm install

# Démarrer le service SSH
#CMD ["/usr/sbin/sshd", "-D"]

# Démarrer les services SSH et Node.js
CMD service ssh start && node /home/user/serveur.js
